{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.vue",
    "src/preload/*.d.ts"
  ],
  "compilerOptions": {
    "moduleResolution": "bundler",
    "composite": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "types": ["naive-ui/volar"],
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    }
  }
}
